{% extends 'base.html.twig' %}

{% block title %}Marque{% endblock %}

{% block body %}
    <h1>Marque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ marque.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ marque.nom }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ marque.statut ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ marque.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('marque_index') }}" class="btn btn-secondary">Retour</a>

    <a href="{{ path('marque_edit', {'id': marque.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('admin/marque/_delete_form.html.twig') }}
{% endblock %}
